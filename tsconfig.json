{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@hive/common": [
        "libs/common/src/index.ts"
      ],
      "@hive/components": [
        "libs/components/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "libs/ui/node_modules",
    "tmp"
  ]
}
